<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#202025">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome_Do_Contato"
        android:id="@+id/nome_lista"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="XXXX-0000"
        android:id="@+id/oldNumber"
        android:layout_margin="4dp"
        android:layout_below="@+id/newNumber"
        android:layout_alignLeft="@+id/newNumber"
        android:layout_alignStart="@+id/newNumber" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Type"
        android:id="@+id/type"
        android:layout_alignBottom="@+id/nome_lista"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:layout_marginBottom="0dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="9XXXX-0000"
        android:id="@+id/newNumber"
        android:layout_below="@+id/nome_lista"
        android:layout_alignLeft="@+id/nome_lista"
        android:layout_alignStart="@+id/nome_lista" />

</RelativeLayout>